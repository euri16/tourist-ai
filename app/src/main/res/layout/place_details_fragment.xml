<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.eury.touristai.ui.main.viewmodels.PlaceDetailsViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlplaceImage"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/placeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/darkcolored_bg"/>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shlTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="@{ TextUtils.isEmpty(viewModel.model.place.name) ? View.VISIBLE : View.GONE }">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <include layout="@layout/loading_view" />
                </LinearLayout>
            </io.supercharge.shimmerlayout.ShimmerLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ viewModel.model.place.name }"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                tools:text="Lorem Ipsum"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="12dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/mapView"
            app:layout_constraintTop_toBottomOf="@+id/rlplaceImage">

            <com.whinc.widget.ratingbar.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="120dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                app:rb_click_rating="false"
                app:rb_count="3"
                app:rb_empty="@drawable/ic_star_empty"
                app:rb_fill="@drawable/ic_star_filled"
                app:rb_max_count="5"
                app:rb_space="-10dp"
                app:rb_touch_rating="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOpenNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_radius_bg"
                    android:drawableEnd="@drawable/ic_open_indicator"
                    android:drawableRight="@drawable/ic_open_indicator"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="Abierto"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_radius_bg"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="+1 809 555 5555"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shlSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{ TextUtils.isEmpty(viewModel.model.place.summaryInfo) ? View.VISIBLE : View.GONE }">

                    <include layout="@layout/loading_view" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="6"
                    android:text="@{ viewModel.model.place.summaryInfo }"
                    android:textSize="13sp"
                    tools:text="@string/test_lorem_ipsum_paragraph" />
            </io.supercharge.shimmerlayout.ShimmerLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="DirecciÃ³n"
                    android:textSize="15sp" />

                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/shlAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{ TextUtils.isEmpty(viewModel.model.place.address) ? View.VISIBLE : View.GONE }">

                        <include layout="@layout/loading_view" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@{ viewModel.model.place.address }"
                        android:textSize="13sp"
                        tools:text="C/Lorem Ipsum #13, Zona Colonial" />
                </io.supercharge.shimmerlayout.ShimmerLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>